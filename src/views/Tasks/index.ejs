<% include ../partials/_header %>
<br>
<div class="row">
    <div class="col-md-3">
            <a class="btn btn-info btn-lg btn-block mb-3 marker" href="/Tasks/add">Agregar</a>
    </div>
    <div class="col-md-3 ">
            <a class="btn btn-warning btn-lg btn-block mb-3 marker" href="#"">Ver archivados</a>
    </div>
    <div class="col-md-3"></div>

    <div class="col-md-3"></div>
    
</div>
<hr class="my-4">
<div class="row">
    <div class="col-md-4">
        <% for( var i = 0; i < doneTasks.length; i++) { %>
            <%- include("../partials/task/taskCard",{
                task: doneTasks[i], 
                cardTitle: 'Finalizada', 
                turnAction: '',
                turnColor: 'warning' ,
                cardColorClass: 'success',
                turnIcon: 'fas fa-backspace',
                showStorage: true,       
                turnVisible: false,
                backVisible: true,
                backAction: 'Progreso',
                backColor: 'warning',
            }) %>             
        <% } %>
    </div>
    <div class="col-md-4">
        <% for( var i = 0; i < progressTasks.length; i++) { %>
            <%- include("../partials/task/taskCard",{
                task: progressTasks[i], 
                cardTitle: 'Progreso', 
                turnVisible: true,
                turnAction: 'Finalizar',
                turnColor: 'success' ,
                backVisible: true,
                backAction: 'Pendiente',
                backColor: 'primary',
                cardColorClass: 'warning',
                turnIcon: 'fas fa-check',
                showStorage: false
            }) %>               
        <% } %>
    </div>
    <div class="col-md-4">
        <% for( var i = 0; i < pendingTasks.length; i++) { %>
            <%- include("../partials/task/taskCard",{
                task: pendingTasks[i], 
                cardTitle: 'Pendiente', 
                turnAction: 'Comenzar',
                turnColor: 'primary' ,
                cardColorClass: 'primary',
                turnIcon: 'fas fa-check',
                showStorage: false,
                turnVisible: true,
                backVisible: false,
                backAction: 'Pendiente',
                backColor: 'primary',
            }) %>               
        <% } %>
    </div>
</div>

<% include ../partials/_footer %>

