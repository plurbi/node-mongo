<% include partials/_header %>
<div class="row">
    <div class="col-md-7 offset-md-2">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title marker"><%= formTitle %></h5>
                <form action="<%= action %>" method="<%= method %>">
                    <div class="form-group">
                        <label for="title">Titulo</label>
                        <input type="text" name="title" placeholder="titulo" class="form-control" value="<%= task.title %>">
                    </div>
                    <div class="form-group">
                            <label for="scheduleTime">Programada para</label>
                            <input type="date" name="scheduleTime" class="form-control" value="<%= moment(task.scheduleTime).format('YYYY-MM-DD') %>">
                        </div>
                    <div class="form-group">
                        <label for="description">Descripcion</label>
                        <textarea type="text" 
                        name="description" 
                        placeholder="descripcion" 
                        class="form-control"
                        rows="5"><%= task.description %></textarea>
                    </div>           
                    <button type="submit" class="btn <%= btnClass %> btn-block marker">
                        <%= submitText %>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<% include partials/_footer %>
