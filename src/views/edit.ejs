
<% include partials/_header %>


<div class="row">
    <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/edit/<%= task._id %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" placeholder="titulo" class="form-control" value="<%= task.title %>">
                        </div>
                        <div class="form-group">
                            <textarea type="text" 
                            name="description" 
                            placeholder="descripcion" 
                            class="form-control"><%= task.description %>
                            </textarea>
                        </div>
                        <button type="submit" class="btn btn-success btn-block">
                            Update!
                        </button>
                    </form>
                </div>
            </div>
        </div>
</div>

<% include partials/_footer %>
